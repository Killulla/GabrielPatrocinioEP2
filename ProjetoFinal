            tartarugar.penup()
            tartarugar.color("cyan")
            tartarugar.setpos(-100,-150)
            tartarugar.write("Você já acertou %d palavras e tem uma media de %2.1f chutes por palavra" % (certas,media),font=("Arial",18,"normal"))
            time.sleep(2)
            certas+=certas  
            del lista2[:]
            erro=0
            del listax[:]
            del listaz[:]
            if again.lower()=="nao" or again=="não" or again=="Não":
                play_game==False
                turtle.resetscreen()
                tartaruga3.penup()
                tartaruga3.hideturtle()
                window.bgpic("fundo.gif")
                tartaruga3.setpos(-30,200)
                tartaruga3.pencolor("red")
                tartaruga3.write("Bom jogo, até a próxima" ,font=("Arial",20,"bold"))
                time.sleep(2)    
                window.bye()
            if again.lower()=="sim":
                    turtle.resetscreen()
                    tartaruga2.hideturtle()      
                    tartaruga2.penup()
                    tartaruga2.setpos(-400,0)
                    tartaruga2.pencolor("white")
                    tartaruga2.pensize(5)
                    tartaruga2.write((len(sorteio)*linha),font=("Arial",40,"bold"))
            else:
                play_game==False
                turtle.resetscreen()
                tartaruga3.penup()
                tartaruga3.hideturtle()
                window.bgpic("fundo.gif")
                tartaruga3.setpos(-30,200)
                tartaruga3.pencolor("red")
                tartaruga3.write("Entenderei isso como um não..Bom jogo, até a próxima" ,font=("Arial",20,"bold"))
                time.sleep(2)    
                window.bye()
    

window.exitonclick()
        


