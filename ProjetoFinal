            while escolha.isalpha()==False:
                tartaruga6.write("Por favor, escolha uma letra do alfabeto",font=("Arial",20,"bold"))
                time.sleep(3)
                escolha = window.textinput("Escolha", "Escolha sabiamente uma letra")
                tartaruga6.clear()  
        if escolha.lower() in sorteio:
            listaz.append(i)
            lista3=[]
            lista2.append(escolha.lower())
            listax = []
            lista3.append(escolha.lower())
            for i in range(len(sorteio)):
                if sorteio[i] == escolha.lower():
                    listax.append(i)
            for pos in listax:
                escrever()
        else:
            listaz.append(i)
            lista2.append(escolha.lower())
            erro=erro + 1
        if erro==1:  
            cabeça()
        if erro==2:
            corpo1()
        if erro==3:
            braço1()
        if erro==4:
            braço2()
        if erro==5:
            corpo2()
        if erro==6:
            perna1()
        if erro==7:
            perna2()
        if erro==8:
            corda1()
        if erro==9:
            corda2()
        if len(listax)==len(sorteio):
            media=len(listaz)/certas
